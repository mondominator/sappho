    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^8.1.4",
    "nodemailer": "^7.0.12",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "sqlite3": "^5.1.7",
    "unzipper": "^0.12.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
